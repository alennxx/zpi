<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - borrow_me</title>

      
</head>
    <body>
        <nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top clearfix">
            <!-- Brand/logo -->
            <a class="navbar-brand" asp-route="index">Borrow Me!</a>

            <!-- Links -->
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-route="index">Strona główna</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-route="contact">Kontakt</a>
                </li>
            </ul>

            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-route="login">Logowanie</a>
                </li>
            </ul>
        </nav>

        <div class="container-fluid body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; 2019 - borrow_me</p>
            </footer>
        </div>

    </body>
</html>
